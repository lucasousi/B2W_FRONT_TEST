{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "jsx": "react",
    "paths": {
      "@aquamons-store/home": ["libs/aquamons-store/home/src/index.ts"],
      "@aquamons-store/assets": ["apps/aquamons-store/src/assets"],
      "@shared/helpers": ["libs/shared/helpers/index.ts"],
      "@shared/entities": ["libs/shared/entities/index.ts"],
      "@shared/entities/dtos": ["libs/shared/entities/dtos/index.ts"],
      "@shared/entities/view-models": [
        "libs/shared/entities/view-models/index.ts"
      ],
      "@shared/entities/component-models": [
        "libs/shared/entities/component-models/index.ts"
      ],
      "@shared/components": ["libs/shared/components/index.ts"],
      "@shared/service": ["libs/shared/service/index.ts"],
      "@shared/components/material-icon": [
        "libs/shared/components/material-icon/src/index.ts"
      ],
      "@shared/components/bootstrap-tooltip": [
        "libs/shared/components/bootstrap-tooltip/src/index.ts"
      ],
      "@shared/components/icon-button": [
        "libs/shared/components/icon-button/src/index.ts"
      ],
      "@shared/components/header": [
        "libs/shared/components/header/src/index.ts"
      ],
      "@shared/components/cart-drawer": [
        "libs/shared/components/cart-drawer/src/index.ts"
      ],
      "@shared/components/pokemon-card": [
        "libs/shared/components/pokemon-card/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
